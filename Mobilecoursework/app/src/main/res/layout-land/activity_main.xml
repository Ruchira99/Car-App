<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnIdentify"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="406dp"
        android:layout_marginRight="406dp"
        android:layout_marginBottom="197dp"
        android:gravity="center"
        android:onClick="carMakeIdentifier"
        android:text="@string/identify_the_car_make"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnHint"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="389dp"
        android:layout_marginLeft="389dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginBottom="197dp"
        android:gravity="center"
        android:onClick="hintCar"
        android:text="@string/hints"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnIdentifyImg"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="405dp"
        android:layout_marginRight="405dp"
        android:layout_marginBottom="82dp"
        android:gravity="center"
        android:onClick="imageIdentifier"
        android:text="@string/identify_the_car_image"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAdvanced"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="385dp"
        android:layout_marginLeft="385dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="78dp"
        android:gravity="center"
        android:onClick="advancedLevelbtn"
        android:text="@string/advanced_level"
        android:textStyle="normal|bold" />
</RelativeLayout>